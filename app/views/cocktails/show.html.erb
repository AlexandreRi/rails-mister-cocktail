<h1><%= @cocktail.name %>'s recipe</h1>

<ul class="list-group">
  <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item"><%= dose.description %> <%= dose.ingredient.name %></li>
  <% end %>
</ul>

<div class="container">
  <div class="row">
    <div class="col-12 col-md-6 col-lg-3">
      <div>
        <%= link_to 'Create a dose', new_cocktail_dose_path(@cocktail) %>
        <%= link_to 'Back to home page', cocktails_path(@cocktails) %>
      </div>
    </div>
  </div>
</div>
